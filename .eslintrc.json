{
    "env": {
        "es2020": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "google"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {},
    "settings": {
        "import/resolver": {
            "typescript": {
                "directory": "packages/server/*/tsconfig.json"
            }
        }
    }
}